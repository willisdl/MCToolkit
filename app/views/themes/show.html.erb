<p id="notice"><%= notice %></p>

<div class="panel panel-default" style="width: 80%">
  <!-- Default panel contents -->
  <div class="panel-heading"><h2><%= @theme.name %></h2></div>
  <div class="panel-body">
    <%= @theme.notes %>
  </div>
</div>


<div style="text-align: center; width: 80%">
  <%= link_to edit_theme_path(@theme), :class => "btn btn-primary" do %><span style="color: #FFFFFF"><i class="glyphicon glyphicon-pencil"></i> Edit</span><% end %>
  <%= link_to themes_path, :class => "btn btn-primary" do %><span style="color: #FFFFFF"><i class="glyphicon glyphicon-chevron-left"></i> Back</span><% end %>
</div>

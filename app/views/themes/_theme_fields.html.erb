<div class="nested-fields panel panel-default">
  <div class="field panel-body">
    <span style="float: left"><%= f.label text='Theme:' %></span>
    <span style="float: right"><%= link_to_remove_association f, :class => "btn btn-xxs btn-danger" do %><i class="glyphicon glyphicon-trash"></i> Delete Theme<% end %></span>
    <br/>
    <div style="clear: both;"></div>
    <%= f.text_field :name %><br/><br/>
    <%= f.label text = 'Notes:' %><br/>
    <%= f.text_area :notes, :cols => 120, :rows => 10 %>
  </div>
</div>

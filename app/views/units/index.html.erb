<%= form_for(@exercise) do |f| %>
    <% if @exercise.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>
          <ul>
            <% @exercise.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div id="units">
      <% @exercise.units.each do |unit| %>
          <strong>Unit Designation:</strong> <%= unit.unit_name %><br/>
      <% end %>
      <%= f.fields_for :units do |unit| %>
          <%= render 'units_fields', :f => unit %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<h1><%= CurrentExercise.first.name %> units</h1>

<table class="table">

  <tbody>
    <% @exercise.units.each do |unit| %>
      <tr>
        <td style="width: 100px"><%= unit.unit_name %></td>
        <td style="width: 200px">
          <%= link_to unit, :class => "btn btn-xxs btn-default" do %><i class="glyphicon glyphicon-eye-open"></i> View CTOs<% end %>
          <%= link_to edit_unit_path(unit), :class => "btn btn-xxs btn-default" do %><i class="glyphicon glyphicon-pencil"></i> Edit CTOs<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="panel panel-default">
  <div class="panel-body">
    <div class="nested-fields">
  
      <div class="field">
        <%= f.label :unit_name %>
        <br/>
        <%= f.text_field :unit_name %>
      </div>
	  <div id="ctos" class="panel panel-default">
        <div class="panel-body">
          <%= f.fields_for :ctos do |cto| %>
            <%= render 'cto_fields', :f => cto %>
          <% end %>
		  <%= link_to_add_association 'Add CTO', f, :ctos %>
          <%= link_to_add_association f, :ctos, :class => "btn btn-xs btn-default" do %><i class="glyphicon glyphicon-plus"></i> Add CTO<% end %>
        </div>
	  </div>
      <%= link_to_remove_association "Remove unit", f %>
    </div>
  </div>
</div>

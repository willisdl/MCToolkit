<%= form_for(@exercise) do |f| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
      <% @exercise.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.date_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.date_select :end %>
  </div>
  <div id="units">
    <% f.fields_for :units do |unit| %>
    <p>
      <%= unit.label :unit_name %>
      <%= unit.text_field :unit_name %>
      <%= unit.check_box :_destroy %>
      <%= unit.label :_destroy, 'delete' %>
    </p>
    <% end %>
	<p>
	  <%= link_to_add_fields "Add Unit", unit, :units %>
    </p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h1>Users</h1></div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Username</th>
          <th>Last name</th>
          <th>First name</th>
          <th>Rank</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.lastname %></td>
            <td><%= user.firstname %></td>
            <td><%= user.rank %></td>
            <td><%= user.role %></td>
            <td>

                <%= link_to edit_user_path(user), :class => "btn btn-xs" do %><i class="glyphicon glyphicon-pencil"></i> Edit<% end %>
                <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs" do %><i class="glyphicon glyphicon-trash"></i> Delete<% end %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<br>

<%= link_to new_user_path, :class => "btn btn-xs" do %><i class="glyphicon glyphicon-plus"></i> New User<% end %>
